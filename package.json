  "dependencies": {
    "cm-resize": "^0.2.2",
    "codemirror": "^5.37.0",
    "compression": "^1.7.2",
    "csstips": "^0.2.3",
    "dejavu-fonts-ttf": "^2.37.3",
    "diff-match-patch": "^1.0.0",
    "express": "^4.16.3",
    "express-throttle": "^2.0.0",
    "generic-pool": "^3.4.2",
    "json-stringify-pretty-compact": "^1.2.0",
    "memoizee": "^0.4.12",
    "minimist": "^1.2.3",
    "morgan": "^1.9.0",
    "node-fetch": "^2.1.2",
    "parser-ts": "^0.5.0",
    "png-chunk-text": "^1.0.0",
    "png-chunks-encode": "^1.0.0",
    "png-chunks-extract": "^1.0.0",
    "pseudonymization": "https://github.com/spraakbanken/swell-pseudonymize-js.git",
    "puppeteer": "^1.3.0",
    "ramda": "^0.25.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "reactive-lens": "^0.5.0",
    "remarkable": "^1.7.1",
    "typestyle": "^1.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/codemirror": "^0.0.56",
    "@types/compression": "^0.0.36",
    "@types/diff-match-patch": "^1.0.32",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/express": "^4.11.1",
    "@types/generic-pool": "^3.1.2",
    "@types/memoizee": "^0.4.2",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.0",
    "@types/morgan": "^1.7.35",
    "@types/node-fetch": "^1.6.8",
    "@types/puppeteer": "^1.2.1",
    "@types/ramda": "github:types/npm-ramda#dist",
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "@types/tape": "^4.2.32",
    "chai": "^4.1.2",
    "doctest-ts": ">=0.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "faucet": "^0.0.1",
    "lato-font": "^3.0.0",
    "mocha": "^5.1.1",
    "nyc": "^11.7.1",
    "parcel-bundler": "1.10.0",
    "parcel-plugin-typescript": "^0.7.0",
    "prettier": "^1.12.1",
    "proptest": "^0.0.4",
    "tap-diff": "^0.1.1",
    "tape": "^4.9.0",
    "ts-node": "^6.0.0",
    "typescript": "^3.0.0"
  },
  "nyc": {
    "include": ["dist/**/*"],
    "reporter": ["html", "text"]
  },
  "scripts": {
    "png-io": "ts-node src/Image/png-io.ts",
    "iosaas": "ts-node src/Image/iosaas.ts --serve",
    "serve": "parcel $(ts-node src/generate_index.ts ${App:-Editor})",
    "build":
      "rm -rf dist/*; parcel build --public-url ./ $(ts-node src/generate_index.ts ${App:-Editor})",
    "deploy":
      "yarn run build && rsync -avzc --delete-after dist/ fkswell@k2.spraakdata.gu.se:htdocs/dev",
    "doctest:generate": "doctest-ts src/*ts* src/*/*ts* --mocha",
    "pretest": "yarn run doctest:clean && yarn run doctest:generate",
    "test": "mocha --require ts-node/register {src,src/*,test}/*test.ts*",
    "test:e2e": "mocha --require ts-node/register test/e2e.ts --timeout 20000",
    "coverage":
      "yarn run pretest && yarn run tsc && for i in dist/**/*.doctest.js; do cp $i $(echo $i | sed s/doctest.//); done && nyc mocha dist/test/*js $(echo dist/**/*.doctest.js | sed s/doctest.//g)",
    "test:watch": "mocha --require ts-node/register --watch --watch-extensions ts test/*test.ts*",
    "doctest:watch":
      "yarn run doctest:clean && doctest-ts --tape --watch src/*ts* src/**/*ts* | while read file; do echo running tape on $file; ts-node $file | tap-diff; done",
    "doctest:clean": "rm -f -v src/{,*/}*doctest*",
    "prettier":
      "yarn run doctest:clean && prettier --list-different --write src/{,*/}*ts* test/*ts*"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxBracketSameLine": true,
    "bracketSpacing": false
  }
}

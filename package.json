{
  "name": "swell-editor",
  "license": "MIT",
  "version": "0.1.0",
  "author": "Dan Ros√©n",
  "description": "Editor for normalising second-language learner texts",
  "dependencies": {
    "compression": "^1.7.2",
    "csstips": "^0.2.2",
    "dejavu-fonts-ttf": "^2.37.3",
    "diff-match-patch": "^1.0.0",
    "express": "^4.16.2",
    "express-throttle": "^2.0.0",
    "generic-pool": "^3.4.2",
    "json-stringify-pretty-compact": "^1.1.0",
    "memoizee": "^0.4.12",
    "minimist": "^1.2.0",
    "morgan": "^1.9.0",
    "node-fetch": "^2.1.1",
    "parser-ts": "0.5.0",
    "phantom": "^4.0.12",
    "png-chunk-text": "^1.0.0",
    "png-chunks-encode": "^1.0.0",
    "png-chunks-extract": "^1.0.0",
    "puppeteer": "^1.1.0",
    "ramda": "^0.25.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reactive-lens": "^0.4.0",
    "remarkable": "^1.7.1",
    "typestyle": "^1.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/compression": "^0.0.35",
    "@types/diff-match-patch": "^1.0.31",
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/express": "^4.11.1",
    "@types/generic-pool": "^3.1.0",
    "@types/memoizee": "^0.4.2",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^2.2.48",
    "@types/morgan": "^1.7.35",
    "@types/node-fetch": "^1.6.7",
    "@types/phantom": "^3.2.4",
    "@types/puppeteer": "^1.0.0",
    "@types/ramda": "github:types/npm-ramda#dist",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/tape": "^4.2.31",
    "chai": "^4.1.2",
    "doctest-ts": "^0.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "faucet": "^0.0.1",
    "lato-font": "^3.0.0",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1",
    "parcel-bundler": "^1.3.1",
    "parcel-plugin-typescript": "^0.7.0",
    "prettier": "^1.9.2",
    "proptest": "^0.0.4",
    "tap-diff": "^0.1.1",
    "tape": "^4.9.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.1"
  },
  "nyc": {
    "include": [
      "dist/**/*"
    ],
    "reporter": [
      "html",
      "text"
    ]
  },
  "scripts": {
    "png-io": "ts-node src/png-io.ts",
    "iosaas": "ts-node src/iosaas.ts --serve",
    "serve": "parcel $(ts-node src/generate_index.ts ${App:-SpaghettiEditor})",
    "build": "parcel build --public-url ./ $(ts-node src/generate_index.ts ${App:-SpaghettiEditor})",
    "doctest:generate": "doctest-ts src/*ts* --mocha",
    "pretest": "yarn run doctest:clean && yarn run doctest:generate",
    "test": "mocha --require ts-node/register */*test.ts",
    "coverage": "yarn run pretest && yarn run tsc && for i in dist/*/*.doctest.js; do cp $i $(echo $i | sed s/doctest.//); done && nyc mocha dist/test/*js $(echo dist/*/*.doctest.js | sed s/doctest.//g)",
    "test:watch": "mocha --require ts-node/register --watch --watch-extensions ts test/*test.ts",
    "doctest:watch": "yarn run doctest:clean && doctest-ts --tape --watch src/*ts* | while read file; do echo running tape on $file; ts-node $file | tap-diff; done",
    "doctest:clean": "rm -f -v src/*doctest*",
    "prettier": "yarn run doctest:clean && prettier --list-different --write src/*ts* test/*ts*"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxBracketSameLine": true,
    "bracketSpacing": false
  }
}
